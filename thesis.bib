	Date-Modified = {2018-04-16 21:32:39 +0000},
	Journal = {Environmental Research Letters},
	Number = {9},
	Pages = {094024},
	Title = {Urban climate effects on extreme temperatures in {M}adison, {W}isconsin, USA},
	Url = {http://stacks.iop.org/1748-9326/10/i=9/a=094024},
	Volume = {10},
