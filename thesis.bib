	Journal = {Urban Ecology},
	Number = {1},
	Pages = {53 - 81},
	Title = {Atmospheric changes in a growing community (the {C}olumbia, {M}aryland experience)},
	Url = {http://www.sciencedirect.com/science/article/pii/0304400979900238},
	Volume = {4},
